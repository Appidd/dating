<view class="card_box">
    <block wx:if="{{!isLogin}}">
        <view class="mask">
            
                <text>登录并填写基础信息</text>
                <text style="margin-top:24rpx">解锁</text>
                <view class="login_btn" bindtap="toLogin">
                    立即登录
            </view>
        </view>

    </block>

   
        <view class="name_age_intro">
            <view class="name_age">
                {{item.name}} <text style="margin-left: 32rpx;">{{item.age}}</text>
            </view>
            <view class="address">
                {{item.address}} <text>({{item.distance}})</text>
            </view>
            <view class="intro">
                {{item.introduce}}
            </view>
        </view>
        <image src="{{item.coverImg}}" mode="aspectFill" class="bg" bindtap="toDetail" />
    

</view>