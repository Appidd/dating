<view class="card_box"  >
  <view class="like_collect">
      <image src="/static/images/icon/like.png" mode="aspectFill"/>
      <image src="/static/images/icon/collect.png" mode="aspectFill"/>
  </view>
  <view class="name_age_intro">
      <view class="name_age">
          {{item.name}} <text style="margin-left: 32rpx;">{{item.age}}</text>
      </view>
      <view class="address">
          {{item.address}} <text>({{item.distance}})</text>
      </view>
      <view class="intro">
          {{item.introduce}}
      </view>
  </view>
  <swiper class="swiper" indicator-dots  indicator-color="rgba(255,255,255,0.5)" indicator-active-color="#fff" style="{{swiper.style}}">
    <swiper-item class="swiper_item" wx:for="{{list}}"  >
        <image src="/static/images/icon/bg.jpg" mode="aspectFill" class="bg" bindtouchend="handletouchend" bindtouchstart="handletouchstart"/>
    </swiper-item>
  </swiper>
</view>