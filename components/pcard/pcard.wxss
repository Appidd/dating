/* components/pcard/pcard.wxss */
.water_item{
    height: 378rpx;
    /* width: 310rpx; */
    background-color: rgb(219, 216, 216);
    margin-top: 32rpx;
    border-radius: 16rpx;
    position: relative;
}
.water_img {
    height: 100%;
    width: 100%;
    border-radius: 16rpx;
}

.info {
    position: absolute;
    bottom: 24rpx;
    left: 24rpx;
    color: #D9D9D9;
    font-size: 24rpx;
}

.is_new {
    position: absolute;
    top: 16rpx;
    left: 24rpx;
    width: 80rpx;

    background: rgba(255, 105, 105, 0.6);
    border-radius: 8rpx 8rpx 8rpx 8rpx;
    opacity: 1;
    font-size: 24rpx;
    text-align: center;
    line-height: 42rpx;
    color: #fff;
}