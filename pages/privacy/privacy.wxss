.bold {
    font-size: 28rpx;
    font-weight: bold;
}
.input-container{
    margin-bottom: 24rpx;
    display: flex;
    padding: 10rpx 32rpx 0rpx 32rpx;
  }
  .input-box{
    background-color: #F4F4F4;
    line-height: 64rpx;
    height: 64rpx;
    padding: 0rpx 32rpx;
    border-radius: 8rpx;
    font-size: 28rpx;
    width: 100%;
  }
  .operate{
    display: flex;
    height: 64rpx;
    align-items: center;
    margin-left: 300rpx;
  }
  .operate_icon{
    height: 32rpx;
    width: 32rpx;
    border-radius: 50%;
  }
.switch_box {
    margin-top: 20rpx;
    width: 100%;
    height: 504rpx;
    background: #F4F4F4;
    border-radius: 32rpx 32rpx 32rpx 32rpx;
    opacity: 1;
    display: flex;
    align-items: center;
    /* justify-content: center; */
    flex-direction: column;
}

.switch_item {
    width: 560rpx;
    margin-top: 40rpx;
    display: flex;
    justify-content: space-between;
    padding: 0rpx 48rpx;
    font-size: 28rpx;
    align-items: center;
}

.line {
    margin-top: 20rpx;
    width: 560rpx;
    border-top: 1rpx solid rgba(204, 204, 204, 0.5);
}

.van-switch {
    width: 100rpx !important;
    height: 48rpx !important;
}

.van-switch__node {
    height: 45rpx !important;
    width: 45rpx !important;
}

.between_box {
    font-size: 28rpx;
    margin-top: 20rpx;
    width: 100%;
    display: flex;
    justify-content: space-between;
    /* background-color: red; */
}

.van-slider__button {
    height: 32rpx !important;
    width: 32rpx !important;
}

.title {
    margin-top: 28rpx;
}

.choose_box {
    margin-top: 34rpx;
    width: 300rpx;
    height: 80rpx;
    background: #F4F4F4;
    border-radius: 8rpx 8rpx 8rpx 8rpx;
    opacity: 1;
    font-size: 24rpx;
    text-align: center;
    line-height: 80rpx;
    color: #999;
    position: relative;
}

.choose_box image {
    position: absolute;
    height: 48rpx;
    width: 48rpx;
    top: 12rpx;
    right: 10rpx;
    /* transform: translate(50%,50%); */
}

.bottom_fun {
    width: 100%;
    background-color: #fff;
    /* position: fixed; */
    bottom: 0;
    padding: 20rpx 48rpx 48rpx 48rpx;
    box-sizing: border-box;
    z-index: 999;
}

.funbtn {
    display: flex;
    justify-content: space-between;
    width: 100%;
}

.contact {
    width: 100%;
    height: 96rpx;
    background: #202020;
    border-radius: 8rpx 8rpx 8rpx 8rpx;
    opacity: 1;
    font-size: 28rpx;
    line-height: 96rpx;
    color: #fff;
    text-align: center;
}

.title_type{
    display: flex;
    margin-top: 48rpx;
    font-size: 28rpx;
    align-items: center;
}
.look{
    width: 48rpx;
    height: 48rpx;
}
.education_region{
    margin-top: 30rpx;
    display: flex;
    justify-content: space-between;
}

.contact_area{
    margin-top: 32rpx;
    width: 100%;
height: 80rpx;
line-height: 80;
background: #F4F4F4;
border-radius: 8rpx 8rpx 8rpx 8rpx;
opacity: 1;
box-sizing: border-box;
padding: 0rpx 32rpx;
}
.placeholder{
    font-size: 24rpx;
    color: #979797;
}