.bold {
    font-size: 28rpx;
    font-weight: bold;
}

.gray_text {
    color: #999;
    font-size: 24rpx;
    margin-left: 20rpx;
}

.img_box {
    display: flex;
    /* justify-content: space-between; */
    flex-wrap: wrap;
}

.imgItem:nth-child(2) {
    margin-left: 32rpx;
}

.imgItem:nth-child(3) {
    margin-left: 32rpx;
}

.imgItem:nth-child(5) {
    margin-left: 32rpx;
}

.imgItem:nth-child(6) {
    margin-left: 32rpx;
}

.imgItem {
    width: 196rpx;
    height: 240rpx;
    background: #F4F4F4;
    border-radius: 8rpx 8rpx 8rpx 8rpx;
    opacity: 1;
    margin-top: 32rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
}

.imgItem image {
    width: 196rpx;
    height: 240rpx;

    border-radius: 8rpx 8rpx 8rpx 8rpx;
    opacity: 1;
}

.between_box {
    font-size: 28rpx;
    margin-top: 20rpx;
    width: 100%;
    display: flex;
    justify-content: space-between;
    /* background-color: red; */
}

.van-slider__button {
    height: 32rpx !important;
    width: 32rpx !important;
}

.title {
    margin-top: 28rpx;
}

.choose_box {
    margin-top: 34rpx;
    width: 300rpx;
    height: 80rpx;
    background: #F4F4F4;
    border-radius: 8rpx 8rpx 8rpx 8rpx;
    opacity: 1;
    font-size: 24rpx;
    text-align: center;
    line-height: 80rpx;
    color: #999;
    position: relative;
}

.choose_box image {
    position: absolute;
    height: 48rpx;
    width: 48rpx;
    top: 12rpx;
    right: 10rpx;
    /* transform: translate(50%,50%); */
}
.delete_img{
    top: -5rpx;
    right: -5rpx;
    position: absolute;
    width: 50rpx !important;
    height: 50rpx !important;
}
.bottom_fun {
    width: 100%;
    background-color: #fff;
    position: fixed;
    bottom: 0;
    padding: 20rpx 48rpx 48rpx 48rpx;
    box-sizing: border-box;
    z-index: 9;
}

.funbtn {
    display: flex;
    justify-content: space-between;
    width: 100%;
}

.contact {
    width: 100%;
    height: 96rpx;
    background: #202020;
    border-radius: 8rpx 8rpx 8rpx 8rpx;
    opacity: 1;
    font-size: 28rpx;
    line-height: 96rpx;
    color: #fff;
    text-align: center;
}

.title_type {
    display: flex;
    margin-top: 32rpx;
    font-size: 28rpx;
    align-items: center;
}

.require::after {
    content: '*';
    color: red;
    margin-left: 3rpx;
}

.sex_list {
    margin-top: 34rpx;
    display: flex;
    justify-content: space-between;
}

.sexItem {
    width: 300rpx;

    border-radius: 8rpx 8rpx 8rpx 8rpx;
    opacity: 1;
    font-size: 24rpx;
    line-height: 80rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.sexItem image {
    margin-right: 24rpx;
    height: 48rpx;
    width: 48rpx;
}

.sexchecked {
    background-color: #000;
    color: white;
}

.sexdefault {
    background-color: #F4F4F4;
    color: #999;
}

.look {
    width: 48rpx;
    height: 48rpx;
}

.education_region {
    margin-top: 30rpx;
    display: flex;
    justify-content: space-between;
}

.contact_area {
    margin-top: 32rpx;
    width: 100%;
    height: 80rpx;
    line-height: 80;
    background: #F4F4F4;
    border-radius: 8rpx 8rpx 8rpx 8rpx;
    opacity: 1;
    box-sizing: border-box;
    padding: 0rpx 32rpx;
}

.placeholder {
    font-size: 24rpx;
    color: #979797;
    /* white-space: pre; */
}

.text_area {
    margin-top: 32rpx;
    width: 100%;
    height: 206rpx;
    background: #F4F4F4;
    border-radius: 8rpx 8rpx 8rpx 8rpx;
    opacity: 1;
    padding: 20rpx;
    box-sizing: border-box;
    font-size: 24rpx;
}