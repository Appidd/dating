
.bold{
    font-size: 28rpx;
    font-weight: bold;
}
.between_box{
    margin-top: 20rpx;
    width: 100%;
display: flex;
justify-content: space-between;
/* background-color: red; */
}
.van-slider__button{
    height: 32rpx !important;
    width: 32rpx !important;
}
.title{
    margin-top: 28rpx;
}
.choose_box{
    margin-top: 34rpx;
    width: 100%;
height: 80rpx;
background: #F4F4F4;
border-radius: 8rpx 8rpx 8rpx 8rpx;
opacity: 1;
font-size: 24rpx;
text-align: center;
line-height: 80rpx;
color: #999;
position: relative;
}
.choose_box image{
    position: absolute;
    height: 48rpx;
    width: 48rpx;
    top: 12rpx;
    right: 10rpx;
    /* transform: translate(50%,50%); */
}
.bottom_fun{
    width: 100%;
    background-color: #fff;
    position: fixed;
    bottom: 0;
    padding: 20rpx 48rpx 48rpx 48rpx;
    box-sizing: border-box;
}
.funbtn{
    display: flex;
    justify-content: space-between;
    width: 100%;
}
.contact{
    width: 100%;
    height: 96rpx;
    background: #202020;
    border-radius: 8rpx 8rpx 8rpx 8rpx;
    opacity: 1;
    font-size: 28rpx;
    line-height: 96rpx;
    color: #fff;
    text-align: center;
}
.reset{
    width: 100%;
    background-color: #fff;
    position: fixed;
    bottom: 130rpx;
    padding: 20rpx 48rpx 48rpx 48rpx;
    box-sizing: border-box;
}
.restbtn{
    display: flex;
    justify-content: space-between;
    width: 100%;
}
.restcontact{
    width: 100%;
    /* height: 96rpx; */
    color: #202020;
    border-radius: 8rpx 8rpx 8rpx 8rpx;
    opacity: 1;
    font-size: 28rpx;
    line-height: 96rpx;
   border: 4rpx solid #202020;
    text-align: center;
}

